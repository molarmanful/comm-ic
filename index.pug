doctype html
html
  head
    meta(charset='utf-8')
    title IDEA

    link(href='./css/style.css' rel='stylesheet')

  body
    script.
      document.body.className += ' faded'

    // Fixed frame
    .left2
    .right2
    .left
    .right
      each x in Array(6)
        a.nav □
    .top
      h1.x IDEA
      h3.x.r by Ben Pang & Jana Počuchová
    .bottom
      p.fadedd HINT: Click the panel to see their idea!


    // House background
    .bg

    // Foreground w/ brains, dialogue, etc.
    .cont
      mixin panel(n)
        .full: .panel
          .chars(style='background-image: url(./media/brains/brains' + n + '.png)')
          block
      mixin sub(x, c='')
        .sub(class=c style='background-image: url(./media/brains/' + x + '.png)')
          block

      +panel(1)
        +sub('brains1Bubble1')
      +panel(2)
        +sub('brains2Thinking', 'think')
      +panel(3)
      +panel(4)
        +sub('brains4Bubble1')
        +sub('brains4Bubble2')
      +panel(5)
        .sub: img.glow(src='./media/brains/brains5Bulb.png')
      +panel(6)
        +sub('brains6Bubble1', 'inf')

    script(src='./js/jquery.min.js')
    script(src='./js/fullpage.min.js')
    script(src='./js/main.js')
