/* Compiled from style.styl */

/* TAGS */

html, body
  height 100%
  width 100%
  margin 0
  font-family sans-serif
  transition 1s all


/* CLASSES */

.faded
  opacity 0
  transition none !important
.fadedd
  opacity 0
  transition .1s all !important

.top, .left, .bottom, .right
  position fixed
  z-index 1
  background-color #fff
  display flex
.top, .bottom
  width 80%
  height 10%
  left 10%
.left, .right
  width 10%
  height 80%
  top 10%
.top
  top 0
  border-bottom 5px solid #000
  align-items center
  .x
    width 50%
  .r
    text-align right
.left
  left 0
  border-right 5px solid #000
.right
  right 0
  border-left 5px solid #000
  display flex
  justify-content center
  align-items center
  flex-direction column
  font-size 2em
.bottom
  bottom 0
  border-top 5px solid #000

.nav
  cursor pointer

.bg
  height 80%
  width 80%
  top 10%
  left 10%
  position fixed
  background-image url(../media/background.png)
  background-size cover
  background-position center

.cont
  height 100%
  width 100%

.full
  height 100%
  width 100%
  display flex
  justify-content center
  align-items center

  .panel
    height 80%
    width 80%
    position relative
    display flex
    justify-content center
    align-items center
    .brains
      height 100%
      width 100%
      background-repeat no-repeat
      background-size contain
      background-position center bottom
  .sub
    height 100%
    width 100%
    position absolute
    top 0
    left 0
    display flex
    justify-content center
    align-items center
    background-repeat no-repeat
    background-size contain
    background-position center bottom
    transition all 1s

.scaled
  transform scale(.5) !important
  cursor pointer

/* IDS */
