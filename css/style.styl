/* Compiled from style.styl */

/* TAGS */

html, body
  height 100%
  width 100%
  margin 0
  font-family sans-serif
  transition 1s all

/* CLASSES */

.faded
  opacity 0
  transition none !important
.fadedd
  opacity 0
  transition .1s all !important
.fadedt
  opacity 0
.zoomed
  transform scale(20)
  transform-origin 50% 20%
  transition 1s all

.top, .left, .bottom, .right, .left2, .right2
  position fixed
  z-index 100
  background-color #fff
  display flex
.top, .bottom
  width 80%
  height 10%
  left 10%
.left, .right
  width 10%
  height 80%
  top 10%
.left2, .right2
  width 10%
  height 100%
  top 0
.top
  top 0
  border-bottom 5px solid #000
  align-items center
  .x
    width 50%
  .r
    text-align right
.left
  left 0
  border-right 5px solid #000
.left2
  left 0
.right
  right 0
  border-left 5px solid #000
  display flex
  justify-content center
  align-items center
  flex-direction column
  font-size 2em
.right2
  right 0
.bottom
  bottom 0
  border-top 5px solid #000
  justify-content center
  align-items center
  font-style italic
  p
    transition .5s all

.nav
  cursor pointer

.bg
  height 80%
  width 80%
  top 10%
  left 10%
  position fixed
  background-image url(../media/brains/background.png)
  background-size cover
  background-position center
  transition 1s all

.cont
  height 100%
  width 100%

.full
  height 100%
  width 100%
  display flex
  justify-content center
  align-items center
  transition 1s all

  .panel
    height 80%
    width 80%
    position relative
    display flex
    justify-content center
    align-items center
    .chars
      height 100%
      width 100%
      background-repeat no-repeat
      background-size contain
      background-position center bottom
  .sub
    height 100%
    width 100%
    position absolute
    top 0
    left 0
    display flex
    justify-content center
    align-items center
    background-repeat no-repeat
    background-size contain
    background-position center bottom
    transition all 1s
    .glow
      max-height 100%
      max-width 100%
      height auto
      width auto
      transition all 1s
    .glow:hover
      animation-name glow
      animation-duration 1s
      animation-iteration-count infinite
  .think:hover
    animation-name think
    animation-duration .3s
    animation-iteration-count infinite
  .inf
    cursor pointer
    will-change transform

/* IDS */

/* KEYFRAMES */

@keyframes glow
  0%
    filter drop-shadow(1px 1px 5px #ff0) drop-shadow(-1px -1px 5px #ff0) drop-shadow(1px -1px 5px #ff0) drop-shadow(-1px 1px 5px #ff0)
  50%
    filter drop-shadow(5px 5px 5px #ff0) drop-shadow(-5px -5px 5px #ff0) drop-shadow(5px -5px 5px #ff0) drop-shadow(-5px 5px 5px #ff0)
  100%
    filter drop-shadow(1px 1px 5px #ff0) drop-shadow(-1px -1px 5px #ff0) drop-shadow(1px -1px 5px #ff0) drop-shadow(-1px 1px 5px #ff0)

@keyframes think
  0%
    transform scale(1)
  50%
    transform scale(1.01)
  100%
    transform scale(1)
